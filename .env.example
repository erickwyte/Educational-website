# Copy this to .env and fill the values for production (do NOT commit .env)
# Database
DB_HOST=localhost
DB_NAME=edu_website
DB_USER=root
DB_PASS=

# Logging
# Absolute path where PHP error_log and app debug logs should be written
# Example: C:\xampp\logs or /var/log/website
LOG_DIR=

# Secure uploads
# Absolute path outside your DocumentRoot where uploads will be stored
# Example: C:\secure_uploads or /srv/uploads
SECURE_UPLOAD_ROOT=
# Optional override for PDFs subfolder
SECURE_PDF_DIR=
